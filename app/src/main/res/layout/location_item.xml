<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/locationItemIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="2dp"
            android:src="@drawable/ic_outline_explore_24" />

        <TextView
            android:id="@+id/tv_locationItem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="44dp"
            android:layout_toStartOf="@+id/delete_location"
            android:layout_toEndOf="@+id/locationItemIv"
            android:ellipsize="end"
            android:fontFamily="@font/space_mono_bold"
            android:maxLines="1"
            android:text="Location Title"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_locationItem_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_locationItem_title"
            android:layout_marginEnd="44dp"
            android:layout_toStartOf="@+id/delete_location"
            android:layout_toEndOf="@+id/locationItemIv"
            android:ellipsize="end"
            android:fontFamily="@font/space_mono_bold"
            android:maxLines="1"
            android:text="Location description"
            android:textColor="#656565"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/delete_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_delete_outline_24" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>